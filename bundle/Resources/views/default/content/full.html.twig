{% extends noLayout == true ? viewbaseLayout : pagelayout %}
{% block content %}
    <h2>{{ content.name }}</h2>
    {% for identifier, field in content.fields %}
        <h3>{{ identifier }}</h3>
        {% if not field.isEmpty() %}
            {{ ng_render_field(field) }}
        {% else %}
            <p>Field is empty.</p>
        {% endif %}
    {% endfor %}
{% endblock %}
